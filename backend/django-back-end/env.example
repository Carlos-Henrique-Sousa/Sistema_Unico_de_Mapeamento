# Configurações de Ambiente - S.U.M
# Copie este arquivo para .env e ajuste os valores conforme necessário

# Django
SECRET_KEY=django-insecure-your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Banco de Dados - SQLite para desenvolvimento/testes
DATABASE_URL=sqlite:///db.sqlite3

# Para produção (PostgreSQL) - descomente e configure
# DATABASE_URL=postgresql://user:password@localhost:5432/sum_db
# DB_NAME=sum_db
# DB_USER=sum_user
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# CORS - Frontend URLs
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:3000

# JWT
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=1

# OpenAI (opcional)
OPENAI_API_KEY=your_openai_api_key_here

# Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# Redis (para Celery - opcional)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
